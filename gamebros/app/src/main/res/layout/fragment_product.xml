<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home"
    android:fillViewport="true"
    android:textSize="16sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".views.account.AccountFragment"
        android:id="@id/container">



        <TextView
            android:id="@+id/textSacolaTituloVazio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Detalhes do Produto"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/viewDetalheProduto"
            android:layout_width="378dp"
            android:layout_height="148dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circular_item"
            android:backgroundTint="@color/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageDetalheProduto" />

        <Button
            android:id="@+id/btnComprarItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded"
            android:text="Comprar"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewDetalheProduto"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageDetalheProduto"
            android:layout_width="368dp"
            android:layout_height="380dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/produto_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSacolaTituloVazio" />

        <TextView
            android:id="@+id/textNomeProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="[Nome do Produto]"
            android:textAlignment="center"
            android:textColor="#170085"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalheProduto"
            app:layout_constraintStart_toStartOf="@+id/viewDetalheProduto"
            app:layout_constraintTop_toTopOf="@+id/viewDetalheProduto" />

        <View
            android:id="@+id/viewDivisor"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="#838383"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalheProduto"
            app:layout_constraintStart_toStartOf="@+id/viewDetalheProduto"
            app:layout_constraintTop_toBottomOf="@+id/textNomeProduto" />

        <TextView
            android:id="@+id/textPrecoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="[R$ 0.00]"
            android:textColor="#E91E63"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/viewDetalheProduto"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalheProduto"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/viewDetalhesText"
            android:layout_width="376dp"
            android:layout_height="347dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circular_item"
            android:backgroundTint="#F4EFEF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnComprarItem" />

        <View
            android:id="@+id/viewBlocoDetalhe"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#E91E63"
            app:layout_constraintStart_toStartOf="@+id/viewDetalhesText"
            app:layout_constraintTop_toTopOf="@+id/viewDetalhesText" />

        <TextView
            android:id="@+id/textDetalhesTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Detalhes"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalhesText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/viewBlocoDetalhe"
            app:layout_constraintTop_toTopOf="@+id/viewDetalhesText" />

        <View
            android:id="@+id/viewBlocoDetalhe3"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#E91E63"
            app:layout_constraintStart_toStartOf="@+id/viewDetalhesText"
            app:layout_constraintTop_toTopOf="@+id/viewDetalhesText" />

        <TextView
            android:id="@+id/textDetalhesConteudo"
            android:layout_width="345dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="[Descriçao do produto]"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalhesText"
            app:layout_constraintStart_toStartOf="@+id/viewDetalhesText"
            app:layout_constraintTop_toBottomOf="@+id/textDetalhesTitulo" />

        <View
            android:id="@+id/viewDivisor2"
            android:layout_width="345dp"
            android:layout_height="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:background="#838383"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalhesText"
            app:layout_constraintStart_toStartOf="@+id/viewDetalhesText"
            app:layout_constraintTop_toBottomOf="@+id/textDetalhesConteudo" />

        <View
            android:id="@+id/viewBlocoDetalhe2"
            android:layout_width="24dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:background="#E91E63"
            app:layout_constraintStart_toStartOf="@+id/viewDetalhesText"
            app:layout_constraintTop_toBottomOf="@+id/viewDivisor2" />

        <TextView
            android:id="@+id/textCaracteristicaTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Características"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalhesText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/viewBlocoDetalhe2"
            app:layout_constraintTop_toBottomOf="@+id/viewDivisor2" />

        <TextView
            android:id="@+id/textCategoriaTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Categoria:"
            android:textColor="#170085"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/viewDetalhesText"
            app:layout_constraintTop_toBottomOf="@+id/textCaracteristicaTitulo" />

        <TextView
            android:id="@+id/textCategoriaTitulo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="SubCategoria:"
            android:textColor="#170085"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/viewDetalhesText"
            app:layout_constraintTop_toBottomOf="@+id/textCategoriaTitulo" />

        <TextView
            android:id="@+id/textNomeCategoria"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="Nintendo Switch"
            android:textAlignment="textEnd"
            android:textColor="#E91E63"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalhesText"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textCategoriaTitulo"
            app:layout_constraintTop_toBottomOf="@+id/textCaracteristicaTitulo" />

        <TextView
            android:id="@+id/textNomeJogos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Jogos"
            android:textAlignment="textEnd"
            android:textColor="#E91E63"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/viewDetalhesText"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textCategoriaTitulo2"
            app:layout_constraintTop_toBottomOf="@+id/textNomeCategoria" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/viewDetalheProduto"
            app:layout_constraintTop_toBottomOf="@+id/imageDetalheProduto"
            tools:layout_editor_absoluteX="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>